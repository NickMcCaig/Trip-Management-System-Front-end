@page "/"
@using BackEndAPI
<PageTitle>Index</PageTitle>

<h1>Hello</h1>

<p>Here are the events you can sign up for</p>
<div>
    <a>Search</a>
    <input type="Search in a place" @bind="searchTerm" />
    <button class="btn btn-success" @onclick="() => SearchForPlace()">Search</button>
</div>
<div>
    @foreach (var e in events ?? Enumerable.Empty<EventDto>())
    {
        <h1>@e.Title</h1>
        <h2>@e.LocationDesc</h2>
        <h3>@e.StartDateTime @e.EndDateTime</h3>
        <button class="btn btn-success" @onclick="() => NavigatetoEvent(e.Id)">More info</button>

    }
</div>



